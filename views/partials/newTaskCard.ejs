<div id="popup" class="bodyNewTaskPopUp">
    <div id="newTaskCard">
        <form id="newPostForm" method="post" action="/api/newTask">
            <h1 id="formTitle">TITLE</h1>
            <input type="hidden" name="container" id="taskContainer">

            <input id="titleInput" type="text" name="title" placeholder="Title" required>
            <textarea id="descriptionInput" name="description" placeholder="Description" required rows="5"></textarea>
            <button type="submit">Create New Task</button>
            <button type="button" onclick="closePopup()">Cancel</button>
        </form>
    </div>
</div>