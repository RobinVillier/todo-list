<% lists.forEach(list => { %>
    <% if (list.active) { %>
        <div class="tasksContainer" id="<%= list.name %>Tasks" data-name="<%= list.name %>">
    <% } else { %>
        <div class="tasksContainer hidden" id="<%= list.name %>Tasks" data-name="<%= list.name %>">
    <% } %>
        <div class="cardHeader">
            <p><%= list.name %></p>
        </div>
        <button class="newTaskBtn" href="/newTask" data-name="<%= list.name %>">
            <img src="/images/plus_icon.svg" alt="Plus Icon">
            Add a new task
        </button>
        <% list.tasks.forEach((task, index) => { %>
            <% if (list.tasks[index].done) { %>
                <div class="taskDiv crossedText">
            <% } else { %>
                <div class="taskDiv">
            <% } %>
                <label class="checkbox-container">
                    <input 
                        type="checkbox" 
                        name="taskCheckbox"
                        class="taskCheckbox" 
                        data-list="<%= list.name %>" 
                        data-index="<%= index %>" 
                        <%= task.done ? 'checked' : '' %> 
                    >
                    <span class="checkmark"></span>
                </label>
                <p class="taskTitle"><%= task.title %></p>
                <p class="taskDate"><%= task.date %></p>
                <p class="taskDescription"><%= task.description %></p>
                <a class="editButton" 
                    data-name="<%= list.name %>" 
                    data-index="<%= index %>"
                    data-title="<%= list.tasks[index].title %>"
                    data-description="<%= list.tasks[index].description %>">
                    <img src="/images/edit_icon.svg" alt="Edit Icon">
                </a>
                <a class="trashButton" 
                    href="/api/deleteTask/<%= list.name %>/<%= index %>" 
                    data-name="<%= list.name %>" 
                    data-index="<%= index %>">
                    <img src="/images/trash_icon.svg" alt="Trash Icon">
                </a>
            </div>
        <% }) %>
    </div>
<% }) %>